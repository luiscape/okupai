/*
 * ADMMstruct: implements edges in the graph. Each struct contains the ADMM variables related to the corresponding edge.
 * 
 */ 

public class Node{
  int row;
  int col;
  int[] obs;
  int nobs;
  

  public Node(int row,int col,int value, int max_obs){
    this.row=row;
    this.col=col;
    this.obs = new int[max_obs];
    for (int i=0;i<max_obs;i++)
    {
     this.obs[i]=-1;
    }
    this.nobs=0;
  }
  
  public int add_obs(int value) {
   this.nobs++;
   this.obs[this.nobs]=value;
  }
  
  public float[] split_samples(){
    if (this.nobs <2)
      return -1;
    int half_obs = (this.nobs+1)/2;
    float[] m = new float[2];
    m[0]=0;
    m[1]=0;
 
    for (int i =0;i<half_obs;i++)
    {
      m[0]=m[0]+this.obs[i];
    }
    m[0]=m[0]/n1;
    
    for (int i=half_obs;i<this.nobs;i++)
    {
      m[1]=m[1]+this.obs[i];
    }
    m[1]=m[1]/(nobs-half_obs);
    
    return m;
  }
  
}